CREATE DATABASE foolfuuka DEFAULT CHARACTER SET utf8mb4 DEFAULT COLLATE utf8mb4_general_ci;
GRANT ALL PRIVILEGES ON `asagi`. * TO '${ASAGI_USER}'@'${ASAGI_HOST}';
