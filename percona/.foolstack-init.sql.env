CREATE USER '${ASAGI_USER}'@'${ASAGI_HOST}' IDENTIFIED BY '${ASAGI_PASS}';
CREATE USER '${FOOLFUUKA_USER}'@'${FOOLFUUKA_HOST}' IDENTIFIED BY '${FOOLFUUKA_PASS}';
CREATE USER '${SPHINX_USER}'@'${SPHINX_HOST}' IDENTIFIED BY '${SPHINX_PASS}';
